{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.t{s,sx}"
  ],
  "include": [
    "src/**/*"
  ]
}
